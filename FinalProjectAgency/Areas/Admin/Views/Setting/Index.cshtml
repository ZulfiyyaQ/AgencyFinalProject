@model List<Setting>
@{
    int count = 0;
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Setting</h4>
            
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                No
                            </th>

                            <th>
                               Key
                            </th>
                            <th>
                               Value
                            </th>
                            <th>
                                Settings
                            </th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            count++;

                            <tr>
                                <td>
                                    @count
                                </td>

                                <td>
                                    @item.Key
                                </td>
                                <td>
                                    @item.Value
                                </td>

                                <td>
                                    <a asp-action="update" asp-controller="setting" asp-route-id="@item.Id" class="btn btn-outline-warning">
                                        <i class="mdi mdi-marker"></i>
                                    </a>
                                    
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>