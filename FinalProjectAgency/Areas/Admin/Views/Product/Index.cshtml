@model List<Product>
@{
    int count = 0;
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Product</h4>
            <p class="card-description">
                <a asp-action="create" asp-controller="product" class="btn btn-outline-success"> Create</a>
            </p>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                No
                            </th>
                            <th>
                                Image
                            </th>
                            <th>
                                Name
                            </th>
                            <th>
                                Category Name
                            </th>
                            <th>
                                Settings
                            </th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            count++;

                            <tr>
                                <td>
                                    @count
                                </td>
                                <td class="py-1">
                                    <img src="~/img/portfolio/@item.Image" alt="image" />
                                </td>
                                <td>
                                    @item.Name
                                </td>
                                <td>
                                    @item.Categories.Name
                                </td>

                                <td>
                                    <a asp-action="update" asp-controller="product" asp-route-id="@item.Id" class="btn btn-outline-warning">
                                        <i class="mdi mdi-marker"></i>
                                    </a>
                                    <a asp-action="delete" asp-controller="product" asp-route-id="@item.Id" class="btn btn-outline-danger">
                                        <i class="mdi mdi-delete-variant"></i>
                                    </a>
                                    <a asp-action="detail" asp-controller="product" asp-route-id="@item.Id" class="btn btn-outline-info">
                                        <i class="mdi mdi-book-open-page-variant"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>