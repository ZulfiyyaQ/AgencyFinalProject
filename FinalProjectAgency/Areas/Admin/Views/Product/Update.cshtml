@model UpdateProductVM
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-6 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Update Product</h4>

                        <form class="forms-sample" method="post" enctype="multipart/form-data">
                            <div class="form-group">

                                <input asp-for="Name" type="text" class="form-control" id="exampleInputUsername1" placeholder="Name">
                                <span asp-validation-for="Name"></span>
                            </div>
                            <div class="form-group">

                                <input asp-for="Photo" class="form-control" id="exampleInputUsername1" placeholder="Photo">
                                <span asp-validation-for="Photo"></span>
                            </div>
                            <div class="form-group">

                                <select asp-for="CategoryId" asp-items="new SelectList(Model.Categories,nameof(Category.Id),nameof(Category.Name))" class="form-control">
                                    <option selected disabled> Choose Category</option>
                                </select>
                                <span asp-validation-for="CategoryId"></span>
                            </div>
                            <button type="submit" class="btn btn-primary me-2">Submit</button>
                            <a asp-action="index" asp-controller="product" class="btn btn-light">Cancel</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

